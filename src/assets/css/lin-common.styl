.mainBox
  .content
    h1
      font-weight normal
      font-family font1
      span
        font-family font2
        font-weight bold
        &.marginRight32
          margin-right 0.32rem
        &.marginRight22
          margin-right 0.22rem
    h3
      font-weight normal
      font-family font2
    p
      font-family font2
    .learnMore
      .content-btn
        font-family font2
.swiper-container
  width 100%
  height 100%
.mainBox
  width 100%
  height 100%
  display flex
  align-items center
  padding-left 15%
  box-sizing border-box
  .content
    position relative
    width 100%
    box-sizing border-box
    color #fff
    .content-title
      font-size 1rem
    .learnMore
      display block
      font-size 0
    .content-paragraph
      width 9.08rem
      line-height 2
      font-size 0.16rem
      color #fff
      margin-bottom 0.35rem
      @media screen and (max-width: 768px) {
        width 90%
      }
      &.content-p
        margin-top 0
    .content-left
      display inline-block
      width 1.9rem
      height 1.9rem
      background url("../../assets/img/productCenter/discovery.png") no-repeat
      background-size cover
      margin-right 0.54rem
      position absolute
      top 0
    .content-right
      width 8.7rem
      display inline-block
      margin-left 2.44rem
      padding-top .5rem
      h1
        font-size .6rem
        margin-bottom .2rem
        span
          margin-right .32rem
      h3
        font-size .24rem
        margin-bottom .15rem
      p
        width 100%
        font-size .16rem
        line-height 2
        margin-bottom .85rem
        color #909199
.content-btn
  width 2.6rem
  height .6rem
  font-size .16rem
  color #fff
  background transparent
  border 1px solid rgba(255,255,255,0.2)
  outline none
  cursor pointer
  &:active
    opacity 0.6
.play-btn
  display block
  width 1.46rem
  height 1.46rem
  cursor pointer
  &:active
    opacity 0.6
.adult-list
  font-size 0
  overflow hidden
  li
    display inline-block
    margin-right .3rem
    a
      width 2rem
      height 2.2rem
      display block
      border 1px solid rgba(255,255,255,0.2)
      text-align center
      img
        display inline-block
        width 1.36rem
        margin-top .32rem
        border none
      p
        font-size .16rem
        color #fff
        margin-top .15rem

//  分页器
.swiper-container
 .swiper-pagination
   position absolute
   top 50%
   right 0
//  video
.mainBox
  .playVideo
    position: fixed
    top 100%
    left 0
    background-color: rgba(0,0,0,0.7)
    width 100%
    height 100%
    z-index 2000
    .videoBox
      width 60%
      position absolute
      top 50%
      left 50%
      -webkit-transform translateX(-50%) translateY(-50%)
      -moz-transform translateX(-50%) translateY(-50%)
      -ms-transform translateX(-50%) translateY(-50%)
      transform translateX(-50%) translateY(-50%)
      video
        width  100%
      .closevideoBtn
        position absolute
        right -.15rem
        top -.15rem
        cursor pointer
